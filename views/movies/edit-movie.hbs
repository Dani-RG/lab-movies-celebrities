<h2>Editing movie {{movie.title}}</h2>

<form method="POST" action="/movies/edit/{{movie._id}}">
   <label>Movie's title</label>
   <input type="text" name="title" value="{{movie.title}}"/>
   <label>Genre</label>
   <input type="text" name="genre" value="{{movie.genre}}"/>
   <label>Plot</label>
   <input type="text" name="plot" value="{{movie.plot}}"/>
   <label>Cast</label>
   <select name="cast" multiple>
        {{#each allCelebrities}}
           <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>
    <button type="submit">Save changes</button>
</form>